{{!-- Header to be displayed only on md or larger screens --}}
<h1 class="text-center m-2 d-none d-sm-block display-4 banner">Welcome to Console Dot Blog!</h1>
<hr>
{{!-- Main content panel --}}
<div class="row justify-content-center p-0">
  <section class="col-md-6 col-12 px-0 px-md-3">
    <header class="dropdown">
      <button class="btn btn-primary dropdown-toggle shadow" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
        Sort By <span class="text-white ml-1" id="sort-by">{{sortOption}}</span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li><a class="dropdown-item" href="/">All Posts</a></li>
        <li><a class="dropdown-item" href="/?sort=new">New</a></li>
        <li><a class="dropdown-item" href="/?sort=updated">Recently Updated</a></li>
        <li><a class="dropdown-item" href="/?sort=comments">Comments</a></li>
      </ul>
    </header>
    <main>
      {{#each posts as |post|}}
        {{> homePost}}
      {{/each}}
    </main>
  </section>
</div>
